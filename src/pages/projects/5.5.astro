---

import ProjectPage from '../../layouts/ProjectPage.astro';

import {videoTypes} from '../../const.js'

const images = await Astro.glob(`../../img/ghostbox/*`).then(files => {
    return files.map(file => file.default);
});

const project = {
    title: "5.5",
    type: "Wearable device, Audio Installation",
    videos: [
        {
            src: "https://player.vimeo.com/video/504789015?autoplay=1&muted=1&loop=1&autopause=0&playsinline=1",
            type: videoTypes.external
        }
    ],
    images: images, 
    artist: "Çağdaş Çeçen",
    description: `5.5 transforms artificial light into sound. When viewers put on the
                headset and headphones, they hear a mixture of electromagnetic
                disturbances caused by the artificial light sources in the room. 5.5
                invites you to an ambient synaesthetic experience. The apparatus
                becomes an artificial sensory organ: follow the white noise, let your
                ears guide you, and experience the space anews`,
    links: [
        {
            type: "Video",
            url: "https://vimeo.com/504789015"
        }
    ]
};
---

<ProjectPage 
    title={`Çağdaş Çeçen - ${project.title}`} 
    description={project.description} 
    project={project}
>
    <p>
        5.5 transforms artificial light into sound. When viewers put on the
        headset and headphones, they hear a mixture of electromagnetic
        disturbances caused by the artificial light sources in the room. 5.5
        invites you to an ambient synaesthetic experience. The apparatus
        becomes an artificial sensory organ: follow the white noise, let your
        ears guide you, and experience the space anews
    </p>
</ProjectPage>
